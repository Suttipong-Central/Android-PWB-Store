<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cenergy.central.com.pwb_store">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!--android:roundIcon="@mipmap/ic_launcher_round"-->

    <application
        android:name=".PowerBuyStoreApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_logo"
        android:label="${applicationLabel}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup,android:label">

        <activity android:name="cenergy.central.com.pwb_store.activity.SplashScreenActivity"
                  android:label="@string/app_name"
                  android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="cenergy.central.com.pwb_store.activity.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>

        <activity
            android:name="cenergy.central.com.pwb_store.activity.ProductListActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>

        <activity
            android:name="cenergy.central.com.pwb_store.activity.ProductDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.BarcodeScanActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.CompareActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="cenergy.central.com.pwb_store.activity.WebViewActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.SpecActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.AvaliableStoreActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.SearchActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.ShoppingCartActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.PaymentActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cenergy.central.com.pwb_store.activity.HistoryActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="66f02a1aa825afbd81a5fc6ff950f030c64099ff" />
    </application>

</manifest>