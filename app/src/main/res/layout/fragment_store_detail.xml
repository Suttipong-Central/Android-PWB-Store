<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeFaceAsset="RobotoLight.ttf"
        tools:text="@string/select_store" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_address_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/store_address"
        android:textColor="@color/grayTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_name_title"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_address_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_address_title"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_contact_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/telephone_number"
        android:textColor="@color/grayTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_address_txt"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_contact_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_contact_title"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_open_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/store_open"
        android:textColor="@color/grayTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_contact_txt"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/store_open_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_open_title"
        app:typeFaceAsset="RobotoLight.ttf" />

    <android.support.v7.widget.CardView
        android:id="@+id/delivery_button_payment"
        style="@style/RaisedButtonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_open_txt">

        <cenergy.central.com.pwb_store.view.PowerBuyTextView
            style="@style/RaisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:text="@string/choose_store"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:typeFaceAsset="RobotoLight.ttf" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>