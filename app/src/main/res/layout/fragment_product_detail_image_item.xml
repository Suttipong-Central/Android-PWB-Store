<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/product_item_spacing"
    android:layout_marginStart="@dimen/product_item_spacing"
    android:background="@android:color/white">


    <cenergy.central.com.pwb_store.view.PowerBuyProductImageItemView
        android:id="@+id/image_02"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="33%"/>

    <cenergy.central.com.pwb_store.view.PowerBuyProductImageItemView
        android:id="@+id/image_03"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="33%"/>

    <cenergy.central.com.pwb_store.view.PowerBuyProductImageItemView
        android:id="@+id/image_01"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="33%"/>


</android.support.percent.PercentRelativeLayout>
