<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powerBuyWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <cenergy.central.com.pwb_store.view.PowerBuyTextView
            android:id="@+id/txt_header_payment"
            style="@style/textCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:text="@string/payment_header"
            app:typeFaceAsset="RobotoLight.ttf" />

        <cenergy.central.com.pwb_store.view.PowerBuyTextView
            android:id="@+id/txt_user_profile_payment"
            style="@style/textPaymentHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:text="@string/user_profile"
            app:typeFaceAsset="RobotoLight.ttf" />

        <LinearLayout
            android:id="@+id/personal_details_layout_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/first_name_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:header="@string/first_name"
                    app:required="true" />

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/last_name_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:header="@string/last_name"
                    app:required="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/contact_number_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:header="@string/tell"
                    app:required="true" />

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/email_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:header="@string/email"
                    app:required="true" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/billing_address_layout_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                style="@style/textPaymentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:text="@string/billing_address"
                app:typeFaceAsset="RobotoLight.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/house_no_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:header="@string/house_on"
                    app:required="false" />

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/place_or_building_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:header="@string/place_or_building"
                    app:required="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/soi_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:header="@string/soi"
                    app:required="false" />

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/street_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    app:header="@string/street"
                    app:required="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/inputProvince"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:hint="@string/province"
                    android:inputType="textNoSuggestions" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/inputDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:hint="@string/district"
                    android:inputType="textNoSuggestions"
                    app:layout_constraintTop_toBottomOf="@+id/inputProvince" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/inputSubDistrict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:hint="@string/sub_district"
                    android:inputType="textNoSuggestions"
                    app:layout_constraintTop_toBottomOf="@+id/inputDistrict" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/inputPostcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:hint="@string/post_code"
                    android:inputType="textNoSuggestions"
                    app:layout_constraintTop_toBottomOf="@+id/inputSubDistrict" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <cenergy.central.com.pwb_store.view.PowerBuyEditTextBorder
                    android:id="@+id/tell_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="1"
                    app:header="@string/tel_or_mobile"
                    app:required="false" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/lightgray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_product_list_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/layout_total_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                style="@style/textNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_price"
                android:textSize="18sp" />

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/txt_total_price_payment_description"
                style="@style/textNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="22sp"
                tools:text="4,404" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/delivery_button_payment"
            style="@style/RaisedButtonCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                style="@style/RaisedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_delivery_option"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:typeFaceAsset="RobotoLight.ttf" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>