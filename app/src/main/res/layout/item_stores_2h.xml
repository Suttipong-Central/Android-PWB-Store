<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/storeNameTextView"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Store Name" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/deliveryTextView"
        android:layout_width="match_parent"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        tools:text="@string/store_address"
        app:layout_constraintTop_toBottomOf="@+id/storeNameTextView" />

    <View
        android:id="@+id/line_store"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grayTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_padding_small"
        app:layout_constraintTop_toBottomOf="@+id/deliveryTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>