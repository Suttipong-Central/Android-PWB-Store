<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/green_circle"
                    android:contentDescription="@string/app_name"
                    android:padding="20dp"
                    android:src="@drawable/ic_check" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:orientation="vertical">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/header_order_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_order_success"
                        android:textSize="32sp" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/order_number_order_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_number"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:orientation="horizontal"
            android:paddingBottom="32dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="32dp"
            android:weightSum="1">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/next_step_order_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_step"
                android:textStyle="bold" />

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/staff_description_order_success"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/staff_descriptions" />

            <LinearLayout
                android:id="@+id/staffIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_staff" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/for_staff_order_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="@string/for_staff"
                    android:textColor="@color/textStaffColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/textStaffColor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/order_info_sub_header_order_success"
                style="@style/textSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/personal_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/order_date_order_success"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/order_date"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_order_date_order_success"
                    style="@style/descriptionProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customerNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/name_order_success"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/customer_name"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_name_order_success"
                    style="@style/descriptionProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/email_order_success"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/email"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_email_order_success"
                    style="@style/descriptionProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/contact_no_order_success"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/tell"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_contact_no_order_success"
                    style="@style/descriptionProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/delivery_option_order_success"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/label_delivery_info"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_delivery_option_order_success"
                    style="@style/descriptionProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/lightGray" />

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/shipping_header_order_success"
                style="@style/textSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/store_collection_detail" />

            <LinearLayout
                android:id="@+id/storeAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/branch_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/branch"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_branch_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/address_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/address"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_address_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/tell_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/phone"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_tell_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/open_today_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/open_today"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_open_today_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/delivery_type_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/label_shipping_type"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_delivery_type_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/receiver_name_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/receiver_name"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_receiver_name_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/delivery_address_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/address"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_delivery_address_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/billingAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/header_billing_address_order_success"
                    style="@style/textSubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/label_billing_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/billing_name_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/receiver_name"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_billing_name_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/billing_address_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/address"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_billing_address_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/billingEmailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/billing_email_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/email"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_billing_email_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/billingTelephoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/billing_tel_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/telephone"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_billing_tel_order_success"
                        style="@style/descriptionProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/lightGray" />

            </LinearLayout>

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/order_detail_order_success"
                style="@style/textSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/order_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:weightSum="10">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/product_recycler_order_success"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="5"
                    android:text="@string/products"
                    android:textSize="16sp" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/price_recycler_order_success"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:text="@string/price"
                    android:textSize="16sp" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/qty_recycler_order_success"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/qty"
                    android:textSize="16sp" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/total_recycler_order_success"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:text="@string/total"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/graySelect" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_order_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

            <LinearLayout
                android:id="@+id/amountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/graySelect" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.77" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/total_order_success"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/total"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline80" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/delivery_price_order_success"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/delivery_price"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline80"
                        app:layout_constraintTop_toBottomOf="@+id/total_order_success" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_total_order_success"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/blackText"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline80"
                        tools:text="4,404" />

                    <cenergy.central.com.pwb_store.view.PowerBuyTextView
                        android:id="@+id/txt_delivery_price_order_success"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/blackText"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline80"
                        app:layout_constraintTop_toBottomOf="@+id/txt_total_order_success"
                        tools:text="0" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
