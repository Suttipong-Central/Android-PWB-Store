<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvOrderDetailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_small"
        android:text="@string/label_order_details"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/lineColor"
        app:layout_constraintTop_toBottomOf="@id/tvOrderDetailLabel" />

    <TextView
        android:id="@+id/tvTotalLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_normal"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:text="@string/label_total"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toStartOf="@+id/guideLine50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:gravity="end"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine50"
        app:layout_constraintTop_toTopOf="@+id/tvTotalLabel"
        tools:text="฿19,000" />

    <View
        android:id="@+id/line20"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="@+id/tvTotal"
        app:layout_constraintStart_toStartOf="@+id/tvTotalLabel"
        app:layout_constraintTop_toBottomOf="@id/tvTotalLabel" />

    <TextView
        android:id="@+id/tvDiscountLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_normal"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:text="@string/label_discount"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toStartOf="@+id/guideLine50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line20" />

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:gravity="end"
        android:textColor="@color/specialPriceColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine50"
        app:layout_constraintTop_toTopOf="@+id/tvDiscountLabel"
        tools:text="฿19,000" />

    <View
        android:id="@+id/line21"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="@+id/tvTotal"
        app:layout_constraintStart_toStartOf="@+id/tvTotalLabel"
        app:layout_constraintTop_toBottomOf="@id/tvDiscount" />

    <TextView
        android:id="@+id/tvPromotionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_normal"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:text="@string/label_order_promotion_code"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toStartOf="@+id/guideLine50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line21" />

    <TextView
        android:id="@+id/tvPromotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:gravity="end"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine50"
        app:layout_constraintTop_toTopOf="@+id/tvPromotionLabel"
        tools:text="฿19,000" />

    <View
        android:id="@+id/line22"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="@+id/tvTotal"
        app:layout_constraintStart_toStartOf="@+id/tvPromotionLabel"
        app:layout_constraintTop_toBottomOf="@id/tvPromotion" />

    <TextView
        android:id="@+id/tvShippingFeeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_normal"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:text="@string/label_order_shipping_fee"
        android:textColor="@color/blackText"
        app:layout_constraintEnd_toStartOf="@+id/guideLine50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line22" />

    <TextView
        android:id="@+id/tvShippingFee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:gravity="end"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine50"
        app:layout_constraintTop_toTopOf="@+id/tvShippingFeeLabel"
        tools:text="฿19,000" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/lineColor"
        app:layout_constraintTop_toBottomOf="@+id/tvShippingFeeLabel" />

    <TextView
        android:id="@+id/tvOrderTotalLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:text="@string/label_order_total"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderTotal"
        app:layout_constraintEnd_toStartOf="@id/guideLine50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOrderTotal" />

    <TextView
        android:id="@+id/tvOrderTotal"
        style="@style/textSize22Sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:gravity="end"
        android:textColor="@color/blackText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine50"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        tools:text="฿19,000" />
</androidx.constraintlayout.widget.ConstraintLayout>