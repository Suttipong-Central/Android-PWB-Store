<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/list_item_sub_header_product_img"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/list_item_sub_header_product_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        tools:src="@mipmap/ic_launcher" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/list_item_sub_header_product_text"
        style="@style/textSize18Sp"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textColor="@color/contentTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_sub_header_product_img"
        app:typeFaceAsset="RobotoLight.ttf"
        tools:text="@string/home_tv" />

</android.support.constraint.ConstraintLayout>