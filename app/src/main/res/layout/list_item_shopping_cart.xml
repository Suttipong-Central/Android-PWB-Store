<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/powerBuyWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/border_grey"
            android:contentDescription="@string/product_detail"
            android:padding="6dp"
            android:src="@drawable/ic_pwb_logo_detail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/product_name_list_shopping_cart"
                style="@style/descriptionProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Product Name" />

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/product_code_list_shopping_card"
                style="@style/descriptionProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/product_code" />

            <cenergy.central.com.pwb_store.view.PowerBuyTextView
                android:id="@+id/price_list_shopping_cart"
                style="@style/descriptionProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Price : ฿68" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/txt_qty_title_list_shopping_cart"
                    style="@style/descriptionProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/qty" />

                <cenergy.central.com.pwb_store.view.PowerBuyIncreaseOrDecreaseView
                    android:id="@+id/qty__list_shopping_cart"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/txt_qty_title_list_shopping_cart" />

                <cenergy.central.com.pwb_store.view.PowerBuyTextView
                    android:id="@+id/total_price_list_shopping_cart"
                    style="@style/textNameProduct"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap"
                    tools:text="฿204" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/deleteItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/product_detail"
        android:src="@drawable/ic_cancel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_shopping_cart"
        android:background="@color/graySelect" />

</RelativeLayout>