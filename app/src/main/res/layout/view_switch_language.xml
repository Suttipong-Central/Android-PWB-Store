<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toggle_language"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_purple_out_line"
    android:checkedButton="@id/lang_th"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/lang_th"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_language_toggle"
        android:button="@null"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/hint_th"
        android:textColor="@color/powerBuyPurple" />

    <RadioButton
        android:id="@+id/lang_en"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_language_toggle"
        android:button="@null"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/hint_en"
        android:textColor="@color/powerBuyWhite" />
</RadioGroup>