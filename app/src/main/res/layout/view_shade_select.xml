<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/titleShade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shade"
        android:textColor="@color/nameProductColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeFaceAsset="RobotoLight.ttf" />

    <cenergy.central.com.pwb_store.view.PowerBuyTextView
        android:id="@+id/txtTitleShade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:textColor="@color/nameProductColor"
        android:textSize="16sp"
        Tool:text="Red"
        app:layout_constraintStart_toEndOf="@+id/titleShade"
        app:layout_constraintTop_toTopOf="parent"
        app:typeFaceAsset="RobotoLight.ttf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shadeRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_xsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleShade" />

</androidx.constraintlayout.widget.ConstraintLayout>